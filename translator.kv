WindowManager:
    MainWindow:
    SecondWindow:
    ThirdWindow:
    FourthWindow:

<MainWindow>:
    name:"main"
    GridLayout:
        cols:1
        Button:
            on_release:
                app.root.current="second"
                root.manager.transition.direction="left"
            Image:
                source:'Vocably.png'
                fit_mode:"fill"
                center_x:self.parent.center_x
                center_y:self.parent.center_y
                size:800,700
        

<SecondWindow>:
    name:'second'
    canvas.before:
        Color:
            rgba:0,0,0,0
    Button:
        text: "Translate"
        font_size:20
        pos_hint:{"center_x":0.5,"center_y":0.65}
        size_hint:.4,.1
        background_color:6/255,141/255,105/255,1
        background_normal:''
        on_release:
            app.root.current='third'
            root.manager.transition.direction="left"
    Button:
        text: "Detect"
        font_size:20
        pos_hint:{"center_x":0.5,"center_y":0.4}
        size_hint:.4,.1
        background_color:6/255,141/255,105/255,1
        background_normal:''
        on_release:
            app.root.current='Fourth'
            root.manager.transition.direction="left"

<ThirdWindow>
