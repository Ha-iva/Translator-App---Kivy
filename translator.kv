<FourthWindow>:
    name:'Fourth'
    t3:t3
    t4:t4
    canvas.before:
        Color:
            rgba:6/255,141/255,105/255,1

    TextInput:
        id:t3
        hint_text:"Enter text to translate"
        pos_hint:{"center_x":0.5,"center_y":0.8}
        size_hint:0.8,0.2

    Button:
        text: "Detect"
        pos_hint:{"center_x":0.5,"center_y":0.65}
        size_hint:.4,.08
