            center_x:self.parent.center_x
            center_y:self.parent.center_y
            size:70,70
    
    Button:
        text:"Back"
        pos_hint:{"center_x":0.5,"center_y":0.1}
        size_hint:.4,.08
        on_release:
            app.root.current='second'
            root.manager.transition.direction="right"

<MyDrop@DropDown>
    max_height:200
    height:5
    width:100
    auto_height:False
    auto_width:False
    
    

